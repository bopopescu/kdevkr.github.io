.posts-expand {
    .post-title {
        font-weight: 700;
    }
}

+tablet() {
    .posts-expand .post-title {
        margin-top: 20px;
    }
}

+mobile() {
    .posts-expand .post-title {
        margin-top: 20px;
    }
}

.post-block {
  box-shadow: none !important;

  .post-meta {
      margin-bottom: 0;
  }
  .post-body {
      padding-top: 20px;
  }
}

.post-body {
    h1, h2 {
      border-bottom: 1px solid $gray;
    }
    .image-caption {
        margin: -10px auto 15px;
    }

    img {
        max-height: 100%;

        &[src*="#wrap"] {
          width: 100%;
          max-height: 200px;
        }
    }
}

.comments {
    box-shadow: none !important;
    border-top: 1px solid $gray;
}
